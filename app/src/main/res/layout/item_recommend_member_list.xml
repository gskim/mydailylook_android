<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_recommend_member_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_item_recommend_member_list_thumb"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        fresco:placeholderImage="@drawable/ic_face"
        fresco:roundingBorderColor="@color/main_color"
        fresco:roundingBorderWidth="1dp"
        fresco:placeholderImageScaleType="center"
        fresco:roundAsCircle="true" />

    <CheckBox
        android:id="@+id/cb_item_recommend_member_list_follow"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/selector_check_follow"
        android:button="@null"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/add_follow"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/cb_item_recommend_member_list_follow"
        android:layout_toRightOf="@id/sdv_item_recommend_member_list_thumb"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_recommend_member_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="username"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_recommend_member_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="description"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>